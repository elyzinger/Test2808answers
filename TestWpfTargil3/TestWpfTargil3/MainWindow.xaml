<Window x:Class="TestWpfTargil3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfTargil3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="URL: " HorizontalAlignment="Left" Margin="144,88,0,0" VerticalAlignment="Top" Width="52" Height="33"/>
        <Label Content="SIZE: " HorizontalAlignment="Left" Margin="144,179,0,0" VerticalAlignment="Top" Width="52" Height="33"/>
        <TextBox Name="UrlName" HorizontalAlignment="Left" Height="29" Margin="201,92,0,0" TextWrapping="Wrap" Text="{Binding Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="315"/>
        <Button Content="START" Name="Startbtn" Click="Button_Click" FontSize="20" HorizontalAlignment="Left" Margin="73,265,0,0" VerticalAlignment="Top" Width="123" Height="45"/>
        <TextBlock Name="ResultText" HorizontalAlignment="Left" Margin="219,179,0,0" TextWrapping="Wrap" Text="{Binding reads.Reads }" VerticalAlignment="Top" Height="33" Width="237"/>
    </Grid>
</Window>
